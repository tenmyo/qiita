{
  "rules": {
    "preset-ja-technical-writing": {
      "__comment": "https://github.com/textlint-ja/textlint-rule-preset-ja-technical-writing",
      "no-exclamation-question-mark": false,
      "ja-no-mixed-period": {
        "allowPeriodMarks": [":::"]
      },
      "no-doubled-joshi": {
        "allow": ["も"]
      },
      "max-kanji-continuous-len": {
        "allow": ["名前空間修飾子", "無名名前空間"]
      }
    },
    "preset-jtf-style": {
      "__comment": "https://github.com/textlint-ja/textlint-rule-preset-JTF-style",
      "2.1.2.漢字": true,
      "2.1.5.カタカナ": false,
      "2.1.6.カタカナの長音": false,
      "2.2.1.ひらがなと漢字の使い分け": true
    },
    "spellcheck-tech-word": true,
    "prh": {
      "rulePaths": ["./prh/WEB+DB_PRESS.yml"]
    }
  },
  "filters": {
    "comments": true
  }
}
